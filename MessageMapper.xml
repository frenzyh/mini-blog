<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.newer.dao.MessageDao">

    <insert id="insert" parameterType="com.newer.dao.Message">
        INSERT message (author, content, date)
        VALUES (#{author}, #{content}, #{date})
    </insert>

    <select id="getAll" resultType="com.newer.dao.Message">
        SELECT * FROM message ORDER BY id DESC
    </select>

</mapper>